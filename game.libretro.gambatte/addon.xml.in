<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.gambatte"
		name="Nintendo - Game Boy / Color (Gambatte)"
		version="0.5.0.52"
		provider-name="Sinamas">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.gameboy" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>Game Boy|Game Boy Color</platforms>
		<extensions>gb|gbc|dmg</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
